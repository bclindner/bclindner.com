mixin cardlink(cardurl, logo, alt, microformats="u-url")
  hr
  section
    a(rel='me' href=cardurl class=microformats)
      img.icon(src='static/img/logos/'+logo+'.svg' alt=alt)
      if block
        h1.username
          block
      else
        h1.username=alt

mixin dummycardlink(logo, alt)
  hr
  section
    span
      img.icon(src='static/img/logos/'+logo+'.svg' alt=alt)
      if block
        h1.username
          block
      else
        h1.username=alt
